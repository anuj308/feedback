# Frontend Production Environment Variables Template
# Copy this to .env.production in your frontend build

VITE_NODE_ENV=production

# API Configuration
VITE_API_BASE_URL=/api/v1
VITE_BACKEND_URL=https://api.yourdomain.com

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id.apps.googleusercontent.com

# Debug flags (Keep false in production)
VITE_DEBUG_API=false
VITE_DEBUG_COMPONENTS=false

# Upload configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# App configuration
VITE_APP_NAME=Feedback Form Builder
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://yourdomain.com
